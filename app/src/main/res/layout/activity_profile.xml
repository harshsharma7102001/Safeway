<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_edit_profile_back"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backbtn"
        android:layout_marginTop="55sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/back_btn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:fontFamily="@font/magra_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="62sp"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="520sp"
        android:background="@drawable/whiteback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/userdetail_profile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="20sp"
                android:textSize="12sp"
                android:text=""
                android:inputType="text"
                app:backgroundTint="#ABA7A7"
                android:drawableRight="@drawable/ic_edit"
                android:id="@+id/name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="2sp"
                android:textSize="12sp"
                android:maxLines="1"
                android:inputType="text"
                android:text=""
                app:backgroundTint="#ABA7A7"
                android:drawableRight="@drawable/ic_edit"
                android:id="@+id/email"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="2sp"
                android:textSize="12sp"
                android:text=""
                android:inputType="text"
                android:maxLines="1"
                app:backgroundTint="#ABA7A7"
                android:drawableRight="@drawable/ic_edit"
                android:id="@+id/phone"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/emergencydetail"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="20sp"
                android:inputType="number"
                android:textSize="12sp"
                android:text=""
                android:maxLines="1"
                app:backgroundTint="@color/red"
                android:drawableRight="@drawable/ic_edit"
                android:id="@+id/ephone1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginTop="2sp"
                android:textSize="12sp"
                android:inputType="number"
                android:text=""
                android:maxLines="1"
                app:backgroundTint="@color/red"
                android:drawableRight="@drawable/ic_edit"
                android:id="@+id/ephone2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/savebtn"
                android:layout_marginTop="20sp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/save"/>
        </LinearLayout>
    </FrameLayout>
