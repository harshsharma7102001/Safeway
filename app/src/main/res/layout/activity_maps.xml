<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageView
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="22sp"
        android:id="@+id/avatar"/>
    <!--    closing of temp tab-->
    <com.clk.progress.CircularProgress
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/circularProgress"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <!--    Temp tab-->
    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/overviewContainer"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/areaname"
                android:layout_width="86sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Loading.."
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/areaname"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:text="0Â°C"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/weathericon"
                android:layout_width="48sp"
                android:layout_height="48sp"
                android:layout_toRightOf="@id/areaname"
                android:src="@drawable/cloudy_img" />

            <TextView
                android:id="@+id/status"
                android:layout_width="59sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/weathericon"
                android:layout_gravity="center"
                android:layout_marginStart="18sp"
                android:layout_toRightOf="@id/temp"
                android:text="Loading..."
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:visibility="invisible"
        android:layout_width="150sp"
        android:layout_height="100sp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_more"
        android:id="@+id/more_dialogue"
        app:layout_constraintBottom_toBottomOf="@id/helpsection"
        app:layout_constraintEnd_toStartOf="@id/helpsection"
        app:layout_constraintTop_toTopOf="@id/helpsection"
        app:layout_constraintVertical_bias="0.337">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13sp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cab Booking"
                    android:fontFamily="@font/magra_regular"
                    android:textSize="22sp"
                    android:id="@+id/Cab_booking"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Quick Repair"
                    android:fontFamily="@font/magra_regular"
                    android:textSize="22sp"
                    android:id="@+id/quick_repair"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/speedData"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/helpsection"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="10sp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sos"
            android:id="@+id/sos"/>
        <ImageView
            android:layout_width="45sp"
            android:layout_margin="10sp"
            android:layout_height="45sp"
            android:src="@drawable/buddy"
            android:id="@+id/buddy"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="10sp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:id="@+id/search"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="10sp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_navigation"
            android:id="@+id/navigation"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/speedData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="-12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/data">
        <FrameLayout
            android:layout_width="74sp"
            android:layout_height="73sp"
            android:background="@drawable/current_speed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3sp"
                        android:layout_marginTop="2sp"
                        android:layout_marginEnd="3sp"
                        android:layout_marginBottom="4sp"
                        android:text="25"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Km/h"
                        android:layout_toRightOf="@+id/speed"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_margin="4sp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Current\nSpeed"
                    android:textSize="12sp"
                    android:textColor="@color/brown"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/ic_driveuback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:10PM"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:id="@+id/timenow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival Time"
                android:textSize="12sp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:id="@+id/duration"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min"
                android:textSize="12sp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="24sp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60sp"
                android:layout_height="24sp"
                android:src="@drawable/ic_endbtn"
                android:id="@+id/startBtn"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.3"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Km"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/destination"
                    android:textColor="@color/white"
                    android:layout_marginStart="5sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="12sp"
                android:textColor="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/speedlimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Km"
                    android:textSize="15sp"
                    android:layout_toRightOf="@id/speedlimit"
                    android:textColor="@color/white"
                    android:layout_marginStart="5sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed Limit"
                android:textSize="12sp"
                android:textColor="@color/gray"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>