<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/framelayout"
    android:layout_height="match_parent"
    tools:context=".DestinationActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            android:id="@+id/newll1"
            android:elevation="10sp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="40sp">
                <fragment
                    android:id="@+id/autocomplete_fragment1"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    app:backgroundTint ="@null"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <HorizontalScrollView
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:scrollbars="none"
            android:scrollbarThumbHorizontal="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fuel_Staion"
                    android:layout_width="100sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/feul_station" />
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="33sp"
                    android:layout_marginStart="10sp"
                    android:background="@drawable/garages_img"
                    android:id="@+id/garages"/>
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="33sp"
                    android:layout_marginStart="10sp"
                    android:padding="4sp"
                    android:background="@drawable/hospital_img"
                    android:id="@+id/hospitals"/>
                <ImageView
                    android:layout_width="100sp"
                    android:layout_height="33sp"
                    android:layout_marginStart="10sp"
                    android:padding="4sp"
                    android:background="@drawable/hotels_img"
                    android:id="@+id/hotels"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="340sp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/ic_custom_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recently Viewed"
                android:textAlignment="center"
                android:layout_marginBottom="8sp"
                android:fontFamily="@font/magra_regular"
                android:textColor="#8E24AA"
                android:textSize="19sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="6"
                tools:listitem="@layout/recent_layout"
                android:id="@+id/recentData"/>
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
